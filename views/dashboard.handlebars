{{!-- LANDING PAGE --}}

{{> nav/nav-block}}

<div id="main-container" class="container">
  <div class="jumbotron text-center header-wrap" align="center">
    <h1>Woofer</h1>
    <div class="card">
      <img src="https://i.pinimg.com/originals/3a/31/90/3a3190f938422feaccf554b96ea80e93.gif" class="card-img-top" alt="Trotting dog GIF">
      <div class="card-body">
        <h5 class="card-title">Hi, there!</h5>
        <p class="card-text">Chat with nearby dog owners and schedule playdates</p>
        <a href="/register" class="btn" id="register-btn" data-test="register">Register</a>
      </div>
    </div>
    <hr class="my-4">
    
    <div>
      {{#if isloggedin}}

        <p data-test="username">You are logged in as {{user.firstName}}</p>
        <a data-test="home" href="/console"> <button type="btn" class="btn">Home</button></a>
        <a data-test="logout" href="/logout"> <button type="btn" class="btn">Logout</button></a>
      {{else}}
        <p data-test="needToLogIn">You need to log in to use this app</p>
      {{/if}}
      <h5 id="login-err-msg"></h5>
    </div>
  </div>
</div>

{{> modal/login-block}}